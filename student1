# Автор: Ніколаєнко Дмитро
# Роль: перший студент
# Програма створює текстовий файл і записує у нього питання з обробкою винятків

def student1():
    surname = "Ніколаєнко Дмитро"
    question = ("Як у Python працювати з рядками: знайти довжину, змінити регістр, "
                "порахувати кількість певного символу?")
    filename = "question.txt"

    try:
        with open(filename, "w", encoding="utf-8") as file:
            file.write(f"Студент: {surname}\n")
            file.write(f"Питання: {question}\n")
        print(f"Питання студента {surname} записано у файл '{filename}' успішно.")
    except FileNotFoundError:
        print("Помилка: не знайдено шлях до файлу.")
    except PermissionError:
        print("Помилка: немає дозволу на запис у файл.")
    except Exception as e:
        print("Інша помилка:", e)

# Автор: Пушкар Юлія
# Додає відповідь і нове питання
def student2():
    surname = "Пушкар Юлія" 
    answer = ("У Python з рядками зручно працювати за допомогою вбудованих методів. "
              "Функція len() визначає довжину тексту, а методи upper() і lower() "
              "змінюють регістр символів. Для підрахунку кількості певного символу "
              "використовують метод count('a').")
    question = ("Як створити словник у Python, додати в нього нову пару ключ-значення "
                "та вивести всі елементи?")
    filename = "question.txt"

    try: # запис у файл
        with open(filename, "a", encoding="utf-8") as file: # відкриття у режимі додавання
            file.write("\n------------------------------------\n")
            file.write(f"Студент: {surname}\n")
            file.write(f"Відповідь: {answer}\n")
            file.write(f"Питання: {question}\n")
        print(f"Дані студента {surname} успішно додано у файл.") # успішне повідомлення
    except Exception as e: # обробка винятків
        print("Помилка під час запису:", e) # повідомлення про помилку

# Автор: Ганжара Богдан
# Додає відповідь і нове питання
def student3():
    surname = "Ганжара Богдан"
    answer = ("Словник у Python створюється за допомогою фігурних дужок: d = {}. "
              "Нову пару додають командою d['ключ'] = 'значення', а всі елементи "
              "можна переглянути циклом for key, value in d.items():.")
    question = ("Як створити власну функцію користувача у Python, яка приймає аргументи "
                "і повертає результат?")
    filename = "question.txt"

    try:
        with open(filename, "a", encoding="utf-8") as file: # відкриття у режимі додавання
            file.write("\n------------------------------------\n")
            file.write(f"Студент: {surname}\n")
            file.write(f"Відповідь: {answer}\n")
            file.write(f"Питання: {question}\n")
        print(f"Дані студента {surname} успішно додано у файл.") # успішне повідомлення
    except Exception as e: # обробка винятків
        print("Помилка під час запису:", e) # повідомлення про помилку


# Автор: Писана Ольга
# Додає відповідь і нове питання
def student4():
    surname = "Писана Ольга"
    answer = ("Власну функцію створюють за допомогою ключового слова def. "
              "Вона може приймати параметри й повертати результат через оператор return. "
              "Наприклад: def add(a, b): return a + b")
    question = "Як у Python відкрити файл і прочитати його вміст?"
    filename = "question.txt"
    try: 
        with open(filename, "a", encoding="utf-8") as file: # відкриття у режимі додавання
            file.write("\n------------------------------------\n")
            file.write(f"Студент: {surname}\n")
            file.write(f"Відповідь: {answer}\n")
            file.write(f"Питання: {question}\n")
        print(f"Дані студента {surname} успішно додано у файл.") # успішне повідомлення
    except Exception as e: # обробка винятків
        print("Помилка під час запису:", e) # повідомлення про помилку
# Основна функція для поетапного виконання всіх студентів
if __name__ == "main":
   
    # Виклик функцій студентів по черзі
    student1()
    student2()
    student3()
    student4()
